<h1><%= @article.title%></h1>

<p>
    <%= @article.text %>
</p>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>

  <h3><%= comment.author %></h3>
  <p><%= comment.body %></p>

<%end%>



<h2>Leave comment</h2>

<%= form_for([@article, @article.comments.build]) do |f| %>  
  <p>
    <%= f.label :author %><br/>
    <%= f.text_field :author %>
  </p> 

  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p> 

  <p>
    <%= f.submit %>
  </p>

<%end%>