<h2>Contact us</h2>

<%= form_for :contact, url: contacts_path do |f| %>  

  <%if @contact && @contact.errors.any?  %> 
  <!-- если @contact не определена и в другой переменной нет значений ошибок, строчка для ошибок не появляется -->
    <p>
      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <%end%>
      </ul>
    </p>
  <%end%>

  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p> 

  <p>
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  </p> 

  <p>
    <%= f.submit 'Send message' %>
  </p>

<%end%>